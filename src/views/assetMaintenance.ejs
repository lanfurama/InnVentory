<%- include('./partials/header') %> 
<%- include('./partials/nav') %> 
          <div class="col-sm-6">
            <h1><%= typeof t !== 'undefined' ? t('assetMaintenance.title') : 'Asset Maintenance' %></h1>
          </div>
          <div class="col-sm-6">
            <div id="bt" class="float-sm-right">
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add">
                <i class="fas fa-plus"></i>
                <%= typeof t !== 'undefined' ? t('assetMaintenance.add') : 'Add Maintenance' %>
              </button>
            </div>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <% if(typeof errors != 'undefined') { %>
            <% errors.forEach(error => { %> 
            <div class="alert alert-danger alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <%= error.msg %> 
            </div>
            <% }) %> 
            <% } %> 
            <div class="card">
              <div class="card-header">
                <h3 class="card-title"><%= typeof t !== 'undefined' ? t('assetMaintenance.tableTitle') : 'Maintenance Records' %></h3>
              </div>
              <div class="card-body">
                <table id="maintenanceTable" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th><%= typeof t !== 'undefined' ? t('assetMaintenance.asset') : 'Asset' %></th>
                      <th><%= typeof t !== 'undefined' ? t('assetMaintenance.date') : 'Date' %></th>
                      <th><%= typeof t !== 'undefined' ? t('assetMaintenance.description') : 'Description' %></th>
                      <th><%= typeof t !== 'undefined' ? t('assetMaintenance.cost') : 'Cost' %></th>
                      <th><%= typeof t !== 'undefined' ? t('assetMaintenance.performedBy') : 'Performed By' %></th>
                      <% if(typeof locals.user != 'undefined') { %>
                      <th><%= typeof t !== 'undefined' ? t('common.action') : 'Action' %></th>
                      <% } %>
                    </tr>
                  </thead>
                  <tbody>
                    <% (maintenanceList || []).forEach((el, i)=> { %>
                    <tr>
                      <td><%= i+1 %></td>
                      <td><%= el.asset_code %> - <%= el.asset_name %></td>
                      <td><%= el.maintenance_date ? el.maintenance_date.toString().slice(0,10) : '-' %></td>
                      <td><%= el.description || '-' %></td>
                      <td><%= el.cost ? Number(el.cost).toLocaleString() : '-' %></td>
                      <td><%= el.performed_by || '-' %></td>
                      <% if(typeof locals.user != 'undefined') { %>
                      <td>
                        <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#edit<%= el.id %>"><i class="fas fa-edit"></i></button>
                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#delete<%= el.id %>"><i class="fas fa-trash-alt"></i></button>
                      </td>
                      <% } %>
                    </tr>
                    <div class="modal fade" id="edit<%= el.id %>">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h4 class="modal-title"><%= typeof t !== 'undefined' ? t('assetMaintenance.edit') : 'Edit Maintenance' %></h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                          </div>
                          <form action="/asset-maintenance/<%= el.id %>?_method=put" method="post">
                            <div class="modal-body">
                              <div class="form-group">
                                <label><%= typeof t !== 'undefined' ? t('assetMaintenance.date') : 'Date' %></label>
                                <input type="date" name="maintenance_date" class="form-control" required value="<%= el.maintenance_date ? el.maintenance_date.toString().slice(0,10) : '' %>" />
                              </div>
                              <div class="form-group">
                                <label><%= typeof t !== 'undefined' ? t('assetMaintenance.description') : 'Description' %></label>
                                <textarea name="description" class="form-control" rows="2"><%= el.description || '' %></textarea>
                              </div>
                              <div class="form-group">
                                <label><%= typeof t !== 'undefined' ? t('assetMaintenance.cost') : 'Cost' %></label>
                                <input type="number" name="cost" class="form-control" step="0.01" min="0" value="<%= el.cost || '' %>" />
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button type="submit" class="btn btn-primary"><%= typeof t !== 'undefined' ? t('common.save') : 'Save' %></button>
                              <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= typeof t !== 'undefined' ? t('common.close') : 'Close' %></button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                    <div class="modal fade" id="delete<%= el.id %>">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h4 class="modal-title"><%= typeof t !== 'undefined' ? t('assetMaintenance.delete') : 'Delete Maintenance' %></h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                          </div>
                          <form action="/asset-maintenance/delete/<%= el.id %>" method="post">
                            <div class="modal-body">
                              <%= typeof t !== 'undefined' ? t('assetMaintenance.confirmDelete') : 'Are you sure you want to delete this maintenance record?' %>
                            </div>
                            <div class="modal-footer">
                              <button type="submit" class="btn btn-primary"><%= typeof t !== 'undefined' ? t('common.yes') : 'Yes' %></button>
                              <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= typeof t !== 'undefined' ? t('common.cancel') : 'Cancel' %></button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <div class="modal fade" id="add">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title"><%= typeof t !== 'undefined' ? t('assetMaintenance.add') : 'Add Maintenance' %></h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <form action="/asset-maintenance" method="post">
            <div class="modal-body">
              <div class="form-group">
                <label><%= typeof t !== 'undefined' ? t('assetMaintenance.asset') : 'Asset' %></label>
                <select name="asset_id" class="form-control" required>
                  <option value=""><%= typeof t !== 'undefined' ? t('common.select') : 'Select' %></option>
                  <% (assets || []).forEach(a => { %>
                  <option value="<%= a.id %>"><%= a.asset_code %> - <%= a.name %></option>
                  <% }) %>
                </select>
              </div>
              <div class="form-group">
                <label><%= typeof t !== 'undefined' ? t('assetMaintenance.date') : 'Date' %></label>
                <input type="date" name="maintenance_date" class="form-control" required />
              </div>
              <div class="form-group">
                <label><%= typeof t !== 'undefined' ? t('assetMaintenance.description') : 'Description' %></label>
                <textarea name="description" class="form-control" rows="2"></textarea>
              </div>
              <div class="form-group">
                <label><%= typeof t !== 'undefined' ? t('assetMaintenance.cost') : 'Cost' %></label>
                <input type="number" name="cost" class="form-control" step="0.01" min="0" />
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary"><%= typeof t !== 'undefined' ? t('common.save') : 'Save' %></button>
              <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= typeof t !== 'undefined' ? t('common.close') : 'Close' %></button>
            </div>
          </form>
        </div>
      </div>
    </div>

<%- include('./partials/footer') %> 
