<%- include('./partials/header') %> 
<%- include('./partials/nav') %>
        <%- include('./partials/breadcrumb', { items: [
          { label: typeof t !== 'undefined' ? t('breadcrumb.home') : 'Home', url: '/' },
          { label: typeof t !== 'undefined' ? t('breadcrumb.assets') : 'Assets', url: '/assets' },
          { label: typeof t !== 'undefined' ? t('breadcrumb.transfers') : 'Transfers' }
        ] }) %>
        <div class="page-header-flex">
          <h1 class="page-title"><%= typeof t !== 'undefined' ? t('assetTransfer.title') : 'Asset Transfers' %></h1>
          <div class="page-header-actions" id="bt">
            <form method="get" action="/asset-transfers" class="form-inline d-inline-block mr-2" id="fromDeptFilterForm">
              <label class="mr-2 mb-0"><%= typeof t !== 'undefined' ? t('assetTransfer.fromDept') : 'From department' %></label>
              <select name="from_dept_id" class="form-control form-control-sm" onchange="document.getElementById('fromDeptFilterForm').submit();" aria-describedby="fromDeptHint">
                <option value=""><%= typeof t !== 'undefined' ? t('assetTransfer.allDepartments') : 'All departments' %></option>
                <% (departments || []).forEach(d => { %>
                <option value="<%= d.id %>" <%= (typeof selectedFromDeptId !== 'undefined' && selectedFromDeptId == d.id) ? 'selected' : '' %>><%= d.name %> (<%= d.code %>)</option>
                <% }) %>
              </select>
              <small id="fromDeptHint" class="text-muted ml-2 d-none d-md-inline"><%= typeof t !== 'undefined' ? t('assetTransfer.fromDeptHint') : 'Select a department to show only its assets in the transfer form.' %></small>
            </form>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add">
              <i class="fas fa-plus"></i>
              <%= typeof t !== 'undefined' ? t('assetTransfer.add') : 'Add Transfer' %>
            </button>
          </div>
        </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <% if(typeof errors != 'undefined') { %>
            <% errors.forEach(error => { %> 
            <div class="alert alert-danger alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <%= error.msg %> 
            </div>
            <% }) %> 
            <% } %> 
            <div class="card">
              <div class="card-header">
                <h3 class="card-title mb-0"><%= typeof t !== 'undefined' ? t('assetTransfer.tableTitle') : 'Transfer History' %></h3>
              </div>
              <div class="card-body p-0">
                <div class="table-responsive">
                <table id="transfersTable" class="table table-bordered table-hover mb-0">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th><%= typeof t !== 'undefined' ? t('assetTransfer.asset') : 'Asset' %></th>
                      <th><%= typeof t !== 'undefined' ? t('assetTransfer.fromDept') : 'From' %></th>
                      <th><%= typeof t !== 'undefined' ? t('assetTransfer.toDept') : 'To' %></th>
                      <th><%= typeof t !== 'undefined' ? t('assetTransfer.reason') : 'Reason' %></th>
                      <th><%= typeof t !== 'undefined' ? t('assetTransfer.date') : 'Date' %></th>
                      <th><%= typeof t !== 'undefined' ? t('assetTransfer.transferredBy') : 'By' %></th>
                      <% if(typeof locals.user != 'undefined') { %>
                      <th><%= typeof t !== 'undefined' ? t('common.action') : 'Action' %></th>
                      <% } %>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (!transfers || transfers.length === 0) { %>
                    <tr>
                      <td colspan="<%= typeof locals.user != 'undefined' ? 8 : 7 %>" class="text-center py-5">
                        <i class="fas fa-inbox fa-3x text-muted mb-2 d-block"></i>
                        <p class="text-muted mb-2"><%= typeof t !== 'undefined' ? t('emptyState.transfers') : 'No transfers yet' %></p>
                        <a href="#" data-toggle="modal" data-target="#add" class="btn btn-primary btn-sm"><%= typeof t !== 'undefined' ? t('emptyState.addFirstTransfer') : 'Add first transfer' %></a>
                      </td>
                    </tr>
                    <% } else { %>
                    <% (transfers || []).forEach((el, i)=> { %>
                    <tr>
                      <td><%= i+1 %></td>
                      <td><%= el.asset_code %> - <%= el.asset_name %></td>
                      <td><%= el.from_dept_name || '-' %></td>
                      <td><%= el.to_dept_name || '-' %></td>
                      <td><%= el.reason || '-' %></td>
                      <td><%= el.transferred_at ? new Date(el.transferred_at).toLocaleString() : '-' %></td>
                      <td><%= el.transferred_by || '-' %></td>
                      <% if(typeof locals.user != 'undefined') { %>
                      <td>
                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#delete<%= el.id %>"><i class="fas fa-trash-alt"></i></button>
                      </td>
                      <% } %>
                    </tr>
                    <div class="modal fade" id="delete<%= el.id %>">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h4 class="modal-title"><%= typeof t !== 'undefined' ? t('assetTransfer.delete') : 'Delete Transfer' %></h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                          </div>
                          <form action="/asset-transfers/delete/<%= el.id %>" method="post">
                            <div class="modal-body">
                              <%= typeof t !== 'undefined' ? t('assetTransfer.confirmDelete') : 'Are you sure you want to delete this transfer record?' %>
                            </div>
                            <div class="modal-footer">
                              <button type="submit" class="btn btn-primary"><%= typeof t !== 'undefined' ? t('common.yes') : 'Yes' %></button>
                              <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= typeof t !== 'undefined' ? t('common.cancel') : 'Cancel' %></button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                    <% }) %>
                    <% } %>
                  </tbody>
                </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <div class="modal fade" id="add">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title"><%= typeof t !== 'undefined' ? t('assetTransfer.add') : 'Add Transfer' %></h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <form action="/asset-transfers" method="post">
            <input type="hidden" name="from_dept_id" value="<%= typeof selectedFromDeptId !== 'undefined' && selectedFromDeptId ? selectedFromDeptId : '' %>">
            <div class="modal-body">
              <div class="form-group">
                <label><%= typeof t !== 'undefined' ? t('assetTransfer.asset') : 'Asset' %></label>
                <select name="asset_id" class="form-control" required>
                  <option value=""><%= typeof t !== 'undefined' ? t('common.select') : 'Select' %></option>
                  <% (assets || []).forEach(a => { %>
                  <option value="<%= a.id %>" <%= (typeof selectedAssetId !== 'undefined' && selectedAssetId == a.id) ? 'selected' : '' %>><%= a.asset_code %> - <%= a.name %></option>
                  <% }) %>
                </select>
              </div>
              <div class="form-group">
                <label><%= typeof t !== 'undefined' ? t('assetTransfer.toDept') : 'To Department' %></label>
                <select name="to_dept_id" class="form-control" required>
                  <option value=""><%= typeof t !== 'undefined' ? t('common.select') : 'Select' %></option>
                  <% (departments || []).forEach(d => { %>
                  <option value="<%= d.id %>"><%= d.name %> (<%= d.code %>)</option>
                  <% }) %>
                </select>
              </div>
              <div class="form-group">
                <label><%= typeof t !== 'undefined' ? t('assetTransfer.reason') : 'Reason' %></label>
                <textarea name="reason" class="form-control" rows="2"></textarea>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary"><%= typeof t !== 'undefined' ? t('common.save') : 'Save' %></button>
              <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= typeof t !== 'undefined' ? t('common.close') : 'Close' %></button>
            </div>
          </form>
        </div>
      </div>
    </div>

<%- include('./partials/footer') %>
<% if (typeof selectedAssetId !== 'undefined' && selectedAssetId) { %>
<script>
  $(function () {
    $('#add').modal('show');
  });
</script>
<% } %>
