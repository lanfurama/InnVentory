<%- include('./partials/header') %>
<%- include('./partials/nav') %>
          <div class="col-sm-6">
            <h1><%= typeof t !== 'undefined' ? t('depreciation.showTitle') : 'Depreciation Calculation' %></h1>
          </div>
          <div class="col-sm-6">
            <div class="float-right">
              <a href="/depreciation" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> <%= typeof t !== 'undefined' ? t('depreciation.back') : 'Back' %></a>
              <button type="button" class="btn btn-primary" onclick="window.print();"><i class="fas fa-print"></i> <%= typeof t !== 'undefined' ? t('common.print') : 'Print' %></button>
            </div>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <section class="content">
      <div class="container-fluid">
        <div class="card">
          <div class="card-header">
            <p class="mb-0">
              <strong><%= typeof t !== 'undefined' ? t('depreciation.periodStart') : 'Period Start' %>:</strong> <%= run.period_start ? run.period_start.toString().slice(0, 10) : '-' %> |
              <strong><%= typeof t !== 'undefined' ? t('depreciation.periodEnd') : 'Period End' %>:</strong> <%= run.period_end ? run.period_end.toString().slice(0, 10) : '-' %> |
              <strong><%= typeof t !== 'undefined' ? t('depreciation.referenceNumber') : 'Reference' %>:</strong> <%= run.reference_number || '-' %> |
              <strong><%= typeof t !== 'undefined' ? t('depreciation.createdAt') : 'Created At' %>:</strong> <%= run.created_at ? new Date(run.created_at).toLocaleString() : '-' %>
            </p>
          </div>
          <div class="card-body">
            <div class="table-responsive">
            <table id="depreciationTable" class="table table-bordered table-hover mb-0 enhanced-table">
              <thead>
                <tr>
                  <th>No</th>
                  <th><%= typeof t !== 'undefined' ? t('asset.assetCode') : 'Asset Code' %></th>
                  <th><%= typeof t !== 'undefined' ? t('asset.name') : 'Asset Name' %></th>
                  <th><%= typeof t !== 'undefined' ? t('depreciation.periodStart') : 'Period Start' %></th>
                  <th><%= typeof t !== 'undefined' ? t('depreciation.periodEnd') : 'Period End' %></th>
                  <th><%= typeof t !== 'undefined' ? t('depreciation.amount') : 'Amount' %></th>
                </tr>
              </thead>
              <tbody>
                <% (records || []).forEach((rec, i) => { %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><a href="/assets/<%= rec.asset_id %>" class="asset-tag-link"><%= rec.asset_code %></a></td>
                  <td><%= rec.asset_name %></td>
                  <td><%= rec.period_start ? rec.period_start.toString().slice(0, 10) : '-' %></td>
                  <td><%= rec.period_end ? rec.period_end.toString().slice(0, 10) : '-' %></td>
                  <td><%= rec.amount ? Number(rec.amount).toLocaleString() : '-' %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
            </div>
          </div>
        </div>
      </div>
    </section>

<%- include('./partials/footer') %>
