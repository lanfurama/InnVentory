<%- include('./partials/header') %> 
<%- include('./partials/nav') %>
        <%- include('./partials/breadcrumb', { items: [
          { label: typeof t !== 'undefined' ? t('breadcrumb.home') : 'Home', url: '/' },
          { label: typeof t !== 'undefined' ? t('breadcrumb.management') : 'Management', url: '#' },
          { label: typeof t !== 'undefined' ? t('breadcrumb.appLog') : 'App Log' }
        ] }) %>
        <div class="page-header-flex">
          <h1 class="page-title"><%= typeof t !== 'undefined' ? t('log.title') : 'App Log' %></h1>
        </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title mb-0"><%= typeof t !== 'undefined' ? t('log.tableTitle') : 'App Log Table' %></h3>
              </div>
              <div class="card-body p-0">
                <div class="table-responsive">
                <table id="log" class="table table-bordered table-hover mb-0">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th><%= typeof t !== 'undefined' ? t('log.dateTime') : 'Date & Time' %></th>
                      <th><%= typeof t !== 'undefined' ? t('log.user') : 'User' %></th>
                      <th><%= typeof t !== 'undefined' ? t('log.method') : 'Method' %></th>
                      <th><%= typeof t !== 'undefined' ? t('log.endpoint') : 'Endpoint' %></th>
                      <th><%= typeof t !== 'undefined' ? t('log.statusCode') : 'Status Code' %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (!log || log.length === 0) { %>
                    <tr>
                      <td colspan="6" class="text-center py-5">
                        <i class="fas fa-inbox fa-3x text-muted mb-2 d-block"></i>
                        <p class="text-muted mb-2"><%= typeof t !== 'undefined' ? t('emptyState.log') : 'No log entries' %></p>
                      </td>
                    </tr>
                    <% } else { %>
                    <% log.forEach((element, index)=> { %>
                    <tr>
                      <td><%= index+1%></td>
                      <td><%= moment(element.date).locale('id').format('DD-MM-YYYY HH:mm:ss') %></td>
                      <td><%= element.usr %></td>
                      <td><%= element.method %></td>
                      <td><%= element.endpoint %></td>
                      <td><%= element.status_code %></td>
                    </tr>
                    <% }) %>
                    <% } %>
                  </tbody>
                </table>
                </div>
              </div>
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>

    <!-- Clear Log Modal-->
    <div class="modal fade" id="clearLog">
      <div class="modal-dialog">
        <div class="modal-content">
          <!-- Modal Header-->
          <div class="modal-header">
            <h4 class="modal-title"><%= typeof t !== 'undefined' ? t('log.clearLog') : 'Clear Log' %></h4>
            <button type="button" class="close" onclick="$('#clearLog').modal('hide');">&times;</button>
          </div>
          <!-- Modal body-->
          <form action="/log/delete/" method="post">
            <div class="modal-body">
              <%= typeof t !== 'undefined' ? t('log.confirmClear') : 'Are you sure you want to delete all saved log data?' %>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary"><%= typeof t !== 'undefined' ? t('common.yes') : 'Yes' %></button>
              <button type="button" class="btn btn-secondary" onclick="$('#clearLog').modal('hide');"><%= typeof t !== 'undefined' ? t('common.cancel') : 'Cancel' %></button>
            </div>
          </form>
        </div>
      </div>
    </div>

<%- include('./partials/footer') %> 