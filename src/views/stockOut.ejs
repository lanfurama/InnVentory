<%- include('./partials/header') %> 
<%- include('./partials/nav') %> 
          <div class="col-sm-6">
            <h1><%= typeof t !== 'undefined' ? t('stockOut.title') : 'Stock Out' %></h1>
          </div>
          <div class="col-sm-6">
            <div id="bt" class="float-sm-right">
              <div class="dt-buttons btn-group flex-wrap">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add">
                  <i class="fas fa-plus"></i>
                  <%= typeof t !== 'undefined' ? t('stockOut.add') : 'Add Stock Out' %>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <% if(typeof error != 'undefined'){ %> 
            <div class="alert alert-danger alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <%= error %> 
            </div>
            <% } %> 
            <div class="card">
              <div class="card-header">
                <h3 class="card-title"><%= typeof t !== 'undefined' ? t('stockOut.tableTitle') : 'Stock Out Table' %></h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="barangkeluar" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th><%= typeof t !== 'undefined' ? t('stockOut.dateTime') : 'Date & Time' %></th>
                      <th><%= typeof t !== 'undefined' ? t('stockOut.code') : 'Code' %></th>
                      <th><%= typeof t !== 'undefined' ? t('stockOut.name') : 'Name' %></th>
                      <th><%= typeof t !== 'undefined' ? t('common.quantity') : 'Quantity' %></th>
                      <th><%= typeof t !== 'undefined' ? t('stockOut.recipient') : 'Recipient' %></th>
                      <th><%= typeof t !== 'undefined' ? t('stockOut.inputBy') : 'Entered by' %></th>
                      <% if(typeof locals.user != 'undefined') { %>
                      <th><%= typeof t !== 'undefined' ? t('common.action') : 'Action' %></th>
                      <% } %> 
                    </tr>
                  </thead>
                  <tbody>
                    <% stockOutList.forEach((element, index)=> { %>
                    <tr>
                      <td><%= index+1%></td>
                      <td><%= moment(element.tanggal).locale('id').format('DD-MM-YYYY HH:mm:ss') %></td>
                      <td><%= element.kodebarang_k %></td>
                      <td><%= element.namabarang_k %></td>
                      <td><%= element.qty %></td>
                      <td><%= element.penerima %></td>
                      <td><%= element.penginput %></td>
                      <% if(typeof locals.user != 'undefined') { %>
                      <td>
                        <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#edit<%= element.idkeluar %>">
                          <i class="fas fa-edit"></i>
                        </button>
                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#delete<%= element.idkeluar %>">
                          <i class="fas fa-trash-alt"></i>
                        </button>
                      </td>
                      <% } %> 
                    </tr>

                    <!-- Edit Modal -->
                    <div class="modal fade" id="edit<%= element.idkeluar %>">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <!-- Modal Header -->
                          <div class="modal-header">
                            <h4 class="modal-title"><%= typeof t !== 'undefined' ? t('stockOut.edit') : 'Edit Stock Out' %></h4>
                            <button type="button" class="close" onclick="$('#edit<%= element.idkeluar %>').modal('hide');">&times;</button>
                          </div>
                          <!-- Modal body -->
                          <form action="/stock-out/<%= element.idkeluar %>?_method=put" method="post">
                            <div class="modal-body">
                              <input type="hidden" name="idkeluar" required value="<%= element.idkeluar %>"/>
                              <input type="hidden" name="idbarang" required value="<%= element.idbarang %>"/>
                              <div class="form-group">
                                <label for="qty"><%= typeof t !== 'undefined' ? t('common.quantity') : 'Quantity' %></label>
                                <input type="number" name="qty" class="form-control" min="1" placeholder="<%= typeof t !== 'undefined' ? t('common.quantity') : 'Quantity' %>" required value="<%= element.qty %>" />
                              </div>
                              <div class="form-group">
                                <label for="penerima"><%= typeof t !== 'undefined' ? t('stockOut.recipient') : 'Recipient' %></label>
                                <input type="text" name="penerima" class="form-control" placeholder="<%= typeof t !== 'undefined' ? t('stockOut.recipient') : 'Recipient' %>" required value="<%= element.penerima %>" />
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button type="submit" class="btn btn-primary"><%= typeof t !== 'undefined' ? t('common.save') : 'Save' %></button>
                              <button type="button" class="btn btn-secondary" onclick="$('#edit<%= element.idkeluar %>').modal('hide');"><%= typeof t !== 'undefined' ? t('common.close') : 'Close' %></button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  
                    <!-- Delete Modal-->
                    <div class="modal fade" id="delete<%= element.idkeluar %>">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <!-- Modal Header-->
                          <div class="modal-header">
                            <h4 class="modal-title"><%= typeof t !== 'undefined' ? t('stockOut.delete') : 'Delete Stock Out' %></h4>
                            <button type="button" class="close" onclick="$('#delete<%= element.idkeluar %>').modal('hide');">&times;</button>
                          </div>
                          <!-- Modal body-->
                          <form action="/stock-out/delete/<%= element.idkeluar %>" method="post">
                            <div class="modal-body">
                              <%= typeof t !== 'undefined' ? t('stockOut.confirmDelete', { name: element.namabarang_k, date: moment(element.tanggal).locale('id').format('DD-MM-YYYY [jam] HH:mm:ss') }) : 'Are you sure you want to delete stock out ' + element.namabarang_k + ' on ' + moment(element.tanggal).locale('id').format('DD-MM-YYYY [jam] HH:mm:ss') + '?' %>
                              <input type="hidden" name="idkeluar" required value="<%= element.idkeluar %>">
                              <input type="hidden" name="idbarang" required value="<%= element.idbarang %>">
                              <input type="hidden" name="qty" required value="<%= element.qty %>">
                            </div>
                            <div class="modal-footer">
                              <button type="submit" class="btn btn-primary"><%= typeof t !== 'undefined' ? t('common.yes') : 'Yes' %></button>
                              <button type="button" class="btn btn-secondary" onclick="$('#delete<%= element.idkeluar %>').modal('hide');"><%= typeof t !== 'undefined' ? t('common.cancel') : 'Cancel' %></button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>

                    <% }) %>
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>

    <!-- Add Modal -->
    <div class="modal fade" id="add">
      <div class="modal-dialog">
        <div class="modal-content">
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title"><%= typeof t !== 'undefined' ? t('stockOut.add') : 'Add Stock Out' %></h4>
            <button type="button" class="close" onclick="$('#add').modal('hide');stopScan();">&times;</button>
          </div>
          <!-- Modal body -->
          <form action="/stock-out" method="post">
            <div class="modal-body">
              <div class="form-group">
                <div id="reader"></div>
              </div>
              <div class="form-group">
                <label for="barang"><%= typeof t !== 'undefined' ? t('stockOut.selectItem') : 'Select Item' %></label>
                <select class="form-control select2bs4" id="barang" name="barang" required>
                  <option value="" disabled selected><%= typeof t !== 'undefined' ? t('stockOut.selectItem') : 'Select Item' %></option>
                  <% items.forEach((element)=> { %>
                  <% if(element.stock>0) { %> 
                  <option value="<%= element.idbarang %>"><%= element.kodebarang %> - <%= element.namabarang %></option>
                  <% } else { %> 
                  <option value="<%= element.idbarang %>"><%= element.kodebarang %> - <%= element.namabarang %> (<%= typeof t !== 'undefined' ? t('common.outOfStock') : 'Out of stock' %>)</option>
                  <% } %> 
                  <% }) %> 
                </select>
              </div>
              <div class="form-group">
                <label for="qty"><%= typeof t !== 'undefined' ? t('common.quantity') : 'Quantity' %></label>
                <input type="number" name="qty" class="form-control" placeholder="<%= typeof t !== 'undefined' ? t('common.quantity') : 'Quantity' %>" min="1" required />
              </div>
              <div class="form-group">
                <label for="penerima"><%= typeof t !== 'undefined' ? t('stockOut.recipient') : 'Recipient' %></label>
                <input type="text" name="penerima" class="form-control" placeholder="<%= typeof t !== 'undefined' ? t('stockOut.recipient') : 'Recipient' %>" required />
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary"><%= typeof t !== 'undefined' ? t('common.save') : 'Save' %></button>
              <button type="button" class="btn btn-secondary" onclick="$('#add').modal('hide');stopScan();"><%= typeof t !== 'undefined' ? t('common.close') : 'Close' %></button>
            </div>
          </form>
        </div>
      </div>
    </div>

<%- include('./partials/footer') %> 